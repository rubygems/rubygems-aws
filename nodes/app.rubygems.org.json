{
  // run list
  "run_list": ["role[fullstack]"],

  // rubygems Rails application attributes
  "application": {
    "name": "rubygems",
    "rails_env": "staging",
    "rails_root": "/applications/rubygems/staging",
    "server_names": ["rubygems.phlippers.net"],
    "use_ssl": true,
    "force_ssl": true,
    "ssl_key": "dev.rubygems.org.key",
    "ssl_cert": "dev.rubygems.org.crt",
    "app_server": {
      "name": "thin",
      "concurrency": 4
    }
  },

  // sudo users and groups
  "authorization": {
    "sudo": {
      "users": ["phlipper", "samkottler", "dwradcliffe"]
    }
  },

  "environment_variables": {
    // Rails application settings
    "RAILS_ENV":  "staging",
    "RACK_ENV":   "staging",
    "REDIS_URL":  "redis://localhost:6379/0",

    // OpenSSH server timeout
    "TMOUT": "600"

    // Ruby GC tuning
    // "RUBY_HEAP_MIN_SLOTS": 1000000,
    // "RUBY_HEAP_SLOTS_INCREMENT": 1000000,
    // "RUBY_HEAP_SLOTS_GROWTH_FACTOR": 1,
    // "RUBY_GC_MALLOC_LIMIT": 1000000000,
    // "RUBY_HEAP_FREE_MIN": 500000,
    // "RUBY_FREE_MIN": 500000
  },

  // denyhosts security
  "denyhosts": {
    "admin_email": "github@phlippers.net",
    "allowed_hosts": [
      // your IP here :)
    ]
  },

  // Hostname
  "set_fqdn": "rubygems.phlippers.net",

  // firewall rules
  "iptables": {
    "install_rules": false
  },

  // logwatch notifications
  "logwatch": {
    "mailto": "github@phlippers.net"
  },

  // memcached
  "memcached": {
    "memory": 128,
    "user":   "memcache",
    "port":   11211,
    "listen": "127.0.0.1"
  },

  // monit monitors
  "monit": {
    "monitors": [
      "cron", "filesystem", "ntp", "postfix", "postgresql", "redis", "nginx", "memcached"
    ]
  },

  // new relic rpm
  "new_relic": {
    "license_key": "" // your key for server monitoring here
  },

  // ntp timekeeping
  "ntp": {
    "is_server": false,
    "servers": [
      "0.pool.ntp.org",
      "1.pool.ntp.org",
      "2.pool.ntp.org",
      "3.pool.ntp.org"
    ]
  },

  // openssh server
  "openssh": {
    "server": {
      "password_authentication": "no",
      "permit_root_login": "no",
      "subsystem": "sftp internal-sftp"
    }
  },

  // system mailer
  "postfix": {
    "aliases": {
      "root": "github@phlippers.net"
    }
    // "virtual_domains": {
    //   "@rubygems.org": "root"
    // }
  },

  // postgresql
  "postgresql": {
    "version": "9.2",
    "ssl": false,
    "pg_hba": [
      "host rubygems_staging rubygems 127.0.0.1/32 password"
    ]
  },

  // dns resolver
  "resolver": {
    "search": "rubygem.org",
    "nameservers": ["8.8.8.8", "8.8.4.4"]
  },

  // system users
  "users": [
